<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blooddonor.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_splash_icon_primary"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_splash_icon_primary"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodDonor">
        <activity
            android:name=".view.QuickSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar"/>
        <activity
            android:name=".SetNewPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar" />
        <activity
            android:name=".OtpVarificationActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.whiteStatusBar" />
        <activity
            android:name=".SecondSplashActivity"
            android:exported="false"
            android:theme="@style/Theme.BloodDonor.splash" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BloodDonor.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>